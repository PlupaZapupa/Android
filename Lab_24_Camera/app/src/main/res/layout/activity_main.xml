<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/miniImage"
        android:layout_width="146dp"
        android:layout_height="136dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="36dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/fullImage"
        android:layout_width="363dp"
        android:layout_height="435dp"
        android:layout_marginTop="52dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button_bitmap"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:text="@string/bitmap"
        app:layout_constraintBottom_toTopOf="@+id/button_full_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/miniImage" />

    <Button
        android:id="@+id/button_full_image"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:layout_marginBottom="36dp"
        android:text="@string/full"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/miniImage" />

</androidx.constraintlayout.widget.ConstraintLayout>