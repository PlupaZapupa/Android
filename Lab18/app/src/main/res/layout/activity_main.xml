<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/star"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_star"
        android:contentDescription="@string/star"
        android:background="@drawable/circle_bg_star"
        android:elevation="8dp" />

    <ImageView
        android:id="@+id/planet"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_planet"
        android:contentDescription="@string/planet"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_bg_planet"
        android:elevation="4dp" />


    <ImageView
        android:id="@+id/orbit"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/orbit_circle"
        android:contentDescription="@string/orbit"
        android:alpha="0.5" />

</RelativeLayout>
